<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlt_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="15dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/custom_edit_text"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toStartOf="@+id/mark"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingRight="5dp">


        <TextView
            android:id="@+id/passenger_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/nunito_semibold"
            android:gravity="center_vertical"
            android:text="Gihan Madusanka" />

        <TextView
            android:id="@+id/passenger_school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/passenger_name"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="5dp"

            android:fontFamily="@font/nunito_semibold"
            android:gravity="center_vertical"
            android:text="Nice School" />

        <TextView
            android:id="@+id/session"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/passenger_name"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="5dp"

            android:fontFamily="@font/nunito_semibold"
            android:gravity="center_vertical"
            />


    </LinearLayout>


    <ImageView
        android:id="@+id/mark"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:src="@drawable/icon_check" />
</RelativeLayout>