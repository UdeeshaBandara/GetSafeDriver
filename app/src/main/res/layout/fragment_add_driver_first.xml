<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddDriverFirst">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/lnr_image"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:paddingBottom="60dp"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false">


            <LinearLayout
                android:id="@+id/name_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:orientation="vertical">

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:fontFamily="@font/nunito_regular"
                                android:gravity="center_vertical"
                                android:hint="Your Name"
                                android:textColor="@color/black"
                                android:textSize="14sp" />


                            <com.libizo.CustomEditText
                                android:id="@+id/edit_txt_name"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                android:layout_marginTop="10dp"
                                app:libIZO_clearIconTint="#8f1f15"
                                app:libIZO_setBorderColor="#A37C07"
                                app:libIZO_setBorderView="true"
                                app:libIZO_setClearIconVisible="true"
                                app:libIZO_setCornerRadius="4dp"
                                app:libIZO_setStrokeWidth="1dp"
                                android:fontFamily="@font/nunito_bold"
                                android:imeOptions="actionDone"


                                android:paddingHorizontal="10dp"
                                android:paddingVertical="5dp"
                                android:singleLine="true"

                                android:textColor="@color/black"
                                android:textSize="18sp" />


                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/txt_tel_edit_indicator"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_centerInParent="true"
                                android:gravity="center"

                                android:text="Edited"
                                android:visibility="invisible" />

                        </RelativeLayout>


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/nic_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/name_main"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:orientation="vertical">

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:fontFamily="@font/nunito_regular"
                                android:gravity="center_vertical"
                                android:hint="National Identity Card No"
                                android:textColor="@color/black"
                                android:textSize="14sp" />


                            <com.libizo.CustomEditText
                                android:id="@+id/edit_txt_nic"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                android:layout_marginTop="10dp"
                                app:libIZO_clearIconTint="#8f1f15"
                                app:libIZO_setBorderColor="#A37C07"
                                app:libIZO_setBorderView="true"
                                app:libIZO_setClearIconVisible="true"
                                app:libIZO_setCornerRadius="4dp"
                                app:libIZO_setStrokeWidth="1dp"
                                android:fontFamily="@font/nunito_bold"
                                android:imeOptions="actionDone"
                                android:paddingHorizontal="10dp"
                                android:paddingVertical="5dp"

                                android:singleLine="true"
                                android:text="udeeshabandara@gmail.com"
                                android:textColor="@color/black"
                                android:textSize="18sp" />

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/txt_email_edit_indicator"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_centerInParent="true"
                                android:gravity="center"

                                android:text="Edited"
                                android:visibility="invisible" />

                        </RelativeLayout>


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/license_no_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/nic_main"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/lnr_license_no_main"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:orientation="vertical">

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:fontFamily="@font/nunito_regular"
                                android:gravity="center_vertical"
                                android:hint="Driver's License No"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <com.libizo.CustomEditText
                                android:id="@+id/edit_text_license_no_main"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/nunito_semibold"
                                android:layout_marginTop="10dp"
                                app:libIZO_clearIconTint="#8f1f15"
                                app:libIZO_setBorderColor="#A37C07"
                                app:libIZO_setBorderView="true"
                                app:libIZO_setClearIconVisible="true"
                                app:libIZO_setCornerRadius="4dp"
                                app:libIZO_setStrokeWidth="1dp"
                                android:textColor="@color/black"
                                android:textSize="18sp" />

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/img_loc_edit_indicator"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_centerInParent="true"
                                android:gravity="center"


                                android:visibility="invisible" />
                        </RelativeLayout>


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/telephone_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/license_no_main"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/lnr_telephone"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:orientation="vertical">

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:fontFamily="@font/nunito_regular"
                                android:gravity="center_vertical"
                                android:hint="Telephone Number"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <com.libizo.CustomEditText
                                android:id="@+id/edit_text_telephone"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/nunito_semibold"
                                android:inputType="phone"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:maxLength="10"
                                app:libIZO_clearIconTint="#8f1f15"
                                app:libIZO_setBorderColor="#A37C07"
                                app:libIZO_setBorderView="true"
                                app:libIZO_setClearIconVisible="true"
                                app:libIZO_setCornerRadius="4dp"
                                app:libIZO_setPrefix="+91"
                                app:libIZO_setPrefixTextColor="#FF9800"
                                app:libIZO_setStrokeWidth="1dp" />

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView

                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_centerInParent="true"
                                android:gravity="center"


                                android:visibility="invisible" />
                        </RelativeLayout>


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/birthday_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/telephone_main"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/lnr_birthday"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:orientation="vertical">

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:fontFamily="@font/nunito_regular"
                                android:gravity="center_vertical"
                                android:hint="Birthday"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <com.libizo.CustomEditText
                                android:id="@+id/txt_driver_birthday"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                android:fontFamily="@font/nunito_semibold"
                                android:hint="YYYY/MM/dd"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:layout_marginTop="10dp"
                                app:libIZO_clearIconTint="#8f1f15"
                                app:libIZO_setBorderColor="#A37C07"
                                app:libIZO_setBorderView="true"
                                app:libIZO_setClearIconVisible="true"
                                app:libIZO_setCornerRadius="4dp"
                                app:libIZO_setStrokeWidth="1dp" />

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView

                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_centerInParent="true"
                                android:gravity="center"


                                android:visibility="invisible" />
                        </RelativeLayout>


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/email_drop_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/birthday_main"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/lnr_email"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:orientation="vertical">

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:fontFamily="@font/nunito_regular"
                                android:gravity="center_vertical"
                                android:hint="Email"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <com.libizo.CustomEditText
                                android:id="@+id/txt_email"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/nunito_semibold"
                                android:inputType="textEmailAddress"
                                android:textColor="@color/black"
                                android:layout_marginTop="10dp"
                                app:libIZO_clearIconTint="#8f1f15"
                                app:libIZO_setBorderColor="#A37C07"
                                app:libIZO_setBorderView="true"
                                app:libIZO_setClearIconVisible="true"
                                app:libIZO_setCornerRadius="4dp"
                                app:libIZO_setStrokeWidth="1dp"
                                android:textSize="18sp" />

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView

                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_centerInParent="true"
                                android:gravity="center"


                                android:visibility="invisible" />
                        </RelativeLayout>


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/type_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/email_drop_main"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/lnr_type"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:orientation="vertical">

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:fontFamily="@font/nunito_regular"
                                android:gravity="center_vertical"
                                android:hint="Transport Type"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <com.libizo.CustomEditText
                                android:id="@+id/txt_type"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/nunito_semibold"
                                android:layout_marginTop="10dp"
                                app:libIZO_clearIconTint="#8f1f15"
                                app:libIZO_setBorderColor="#A37C07"
                                app:libIZO_setBorderView="true"
                                app:libIZO_setClearIconVisible="true"
                                app:libIZO_setCornerRadius="4dp"
                                app:libIZO_setStrokeWidth="1dp"
                                android:textColor="@color/black"
                                android:textSize="18sp" />

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView

                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_centerInParent="true"
                                android:gravity="center"


                                android:visibility="invisible" />
                        </RelativeLayout>


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>
        </RelativeLayout>
    </ScrollView>


</FrameLayout>